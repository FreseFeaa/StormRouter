<Window x:Class="StormRouterVisualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Storm Router Visualization" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="StatTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления - фиксированная вверху -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10" Panel.ZIndex="1000">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="LoadJsonButton" Content="📁 Загрузить JSON файл" 
                        Click="LoadJsonButton_Click" 
                        Padding="15,8" FontSize="14" 
                        Background="#007ACC" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
                <Button x:Name="GenerateRandomGraphButton" Content="🎲 Сгенерировать граф" 
                        Click="GenerateRandomGraphButton_Click"
                        Padding="15,8" FontSize="14" 
                        Background="#D84315" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                <TextBlock x:Name="StatusText" Margin="20,0,0,0" 
                          VerticalAlignment="Center" FontSize="14" Foreground="White"
                          Text="Выберите JSON файл с данными маршрутов"/>
                <Button x:Name="ResetViewButton" Content="🗘" 
                        Click="ResetViewButton_Click"
                        Padding="10,8" FontSize="14" 
                        Background="#555555" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Margin="20,0,0,0"
                        ToolTip="Сброс вида"/>
            </StackPanel>
        </Border>
        
        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть: визуализация графа -->
            <Border Grid.Column="0" BorderBrush="#007ACC" BorderThickness="2" Margin="10" Background="White">
                <Canvas x:Name="GraphCanvas" 
                        MouseWheel="GraphCanvas_MouseWheel" 
                        MouseLeftButtonDown="GraphCanvas_MouseLeftButtonDown"
                        MouseMove="GraphCanvas_MouseMove"
                        MouseLeftButtonUp="GraphCanvas_MouseLeftButtonUp"
                        Background="White"
                        ClipToBounds="True">
       
                </Canvas>
            </Border>

            <!-- Правая часть: детальная информация -->
            <Grid Grid.Column="1" Background="#F0F0F0">
                <TabControl x:Name="InfoTabControl" Margin="10" BorderThickness="0" SelectedIndex="1">
                    <TabItem Header="📊 Детали маршрута" Background="#E1E1E1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="RouteDetailsText" Margin="10" 
                                    FontFamily="Consolas" FontSize="11" 
                                    TextWrapping="Wrap" IsReadOnly="True"
                                    BorderThickness="0" Background="White"
                                    VerticalScrollBarVisibility="Auto"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="📈 Статистика" Background="#E1E1E1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="StatsPanel" Margin="10"/>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="🔍 Исходные данные" Background="#E1E1E1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="RawDataText" Margin="10" 
                                    FontFamily="Consolas" FontSize="10" 
                                    TextWrapping="Wrap" IsReadOnly="True"
                                    BorderThickness="0" Background="White"
                                    VerticalScrollBarVisibility="Auto"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>